<text>pages/login/login.wxml</text>

<cu-custom bgColor="bg-gradual-blue" >
  <view slot="content">登录</view>
</cu-custom>

<view class="cu-form-group margin-top">
	<view class="title">用户名</view>
	<input placeholder="" bindinput="username"></input>
</view>

